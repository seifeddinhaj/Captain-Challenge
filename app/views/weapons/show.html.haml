%div.max-w-4xl.mx-auto.mt-8
  %h1.text-2xl.font-bold.text-center
    %b Libelle:
    = @weapon.name
  %div.mt-4
    %p.text-lg
      %b Attack Bonus:
      = @weapon.attack_bonus
  %div.mt-6.flex.justify-center
    = link_to 'Modifier', edit_weapon_path(@weapon), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2"
    = link_to 'Retour', weapons_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded"
