= form_with(model: @weapon, local: true, class: "max-w-xl mx-auto mt-8") do |form|
  - if @weapon.errors.any?
    #error_explanation
      %h2= pluralize(@weapon.errors.count, "error") + " prohibited this weapon from being saved:"
      %ul
        - @weapon.errors.full_messages.each do |message|
          %li= message

  .mb-4
    = form.label "Libelle", class: "block text-sm font-bold mb-2"
    = form.text_field :name, class: "w-full px-3 py-2 border rounded shadow"

  .mb-4
    = form.label :attack_bonus, class: "block text-sm font-bold mb-2"
    = form.number_field :attack_bonus, class: "w-full px-3 py-2 border rounded shadow"

  .flex.items-center.justify-between
    = form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"

