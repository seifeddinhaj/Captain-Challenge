%div.mt-8.max-w-4xl.mx-auto
  %h1.text-2xl.font-bold.text-center Armes List
  = link_to 'Ajouter', new_weapon_path, class: "mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"

  %table.mt-4.w-full.text-sm.text-left.text-gray-500.dark:text-gray-400
    %thead.text-xs.text-gray-700.uppercase.bg-gray-50.dark:bg-gray-700.dark:text-gray-400
      %tr
        %th.px-6.py-3 Libelle
        %th.px-6.py-3 Attack Bonus
        %th.px-6.py-3 Actions
    %tbody
      - @weapons.each do |weapon|
        %tr.bg-white.border-b.dark:bg-gray-800.dark:border-gray-700.hover:bg-gray-50.dark:hover:bg-gray-600
          %td.px-6.py-4= weapon.name
          %td.px-6.py-4= weapon.attack_bonus
          %td.px-6.py-4
            = link_to 'Voir', weapon, class: "text-blue-600 hover:text-blue-900 mr-2"
            = link_to 'Modifier', edit_weapon_path(weapon), class: "text-blue-600 hover:text-blue-900 mr-2"
            = link_to 'Supprimer', weapon, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:text-red-900"
