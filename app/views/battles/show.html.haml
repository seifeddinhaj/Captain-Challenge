.container.mx-auto.mt-8
  %h1.text-3xl.font-bold.text-center.mb-4 Battle Details

  .bg-green-100.border.border-green-400.text-green-700.px-4.py-3.rounded.relative.mb-6
    %span.font-bold Gagnant:
    = @battle.winner.name

  %h2.text-2xl.font-semibold.mb-4 Actions
  %div.bg-white.shadow.overflow-hidden.sm:rounded-md
    %ul.divide-y.divide-gray-200
      - @battle.actions.each do |action|
        %li.px-4.py-4.flex.items-center
          %div.flex-1.min-w-0
            %p.text-sm.font-medium.text-gray-900.truncate
              = action.description
